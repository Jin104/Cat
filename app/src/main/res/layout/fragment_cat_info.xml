<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jin.cat.fragments.CatInfoFragment"
    android:background="@color/colorGray0"
    android:id="@+id/fragment">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_cat"
            android:layout_margin="@dimen/_5sdp"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:src="@drawable/cat2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:gravity="right"
                android:paddingRight="@dimen/_30sdp"
                android:background="@color/colorGray1"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="@dimen/_13sdp"/>

            <TextView
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:id="@+id/textView_catName"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="콩이"
                android:textSize="@dimen/_13sdp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:gravity="right"
                android:paddingRight="@dimen/_30sdp"
                android:layout_width="@dimen/_130sdp"
                android:background="@color/colorGray1"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="@dimen/_13sdp"/>

            <TextView
                android:background="@color/colorWhite"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수컷"
                android:id="@+id/textView_catSex"
                android:textSize="@dimen/_13sdp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:gravity="right"
                android:paddingRight="@dimen/_30sdp"
                android:background="@color/colorGray1"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:text="생일"
                android:textSize="@dimen/_13sdp"/>

            <TextView
                android:id="@+id/textView_catBirthDay"
                android:background="@color/colorWhite"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017. 10. 4"
                android:textSize="@dimen/_13sdp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:gravity="right|center"
                android:paddingRight="@dimen/_30sdp"
                android:background="@color/colorGray1"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="match_parent"
                android:text="나이"
                android:textSize="@dimen/_13sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/textView_catAge"
                android:background="@color/colorWhite"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="28개월"
                android:textSize="@dimen/_13sdp"/>

                <TextView
                    android:id="@+id/textView_catHumanAge"
                    android:background="@color/colorWhite"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사람나이로 2세"
                    android:textSize="@dimen/_13sdp"/>
            </LinearLayout>

            <!--<TextView-->
                <!--android:layout_weight="1"-->
                <!--android:id="@+id/textView_catHumanAge"-->
                <!--android:background="@color/colorWhite"-->
                <!--android:padding="@dimen/_2sdp"-->
                <!--android:gravity="left"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="28세(인간)"-->
                <!--android:textSize="@dimen/_14sdp"/>-->
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:gravity="right"
                android:paddingRight="@dimen/_30sdp"
                android:background="@color/colorGray1"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:text="품종"
                android:textSize="@dimen/_13sdp"/>

            <TextView
                android:id="@+id/textView_catType"
                android:background="@color/colorWhite"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="먼치킨"
                android:textSize="@dimen/_13sdp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:gravity="right"
                android:paddingRight="@dimen/_30sdp"
                android:background="@color/colorGray1"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:text="몸무게"
                android:textSize="@dimen/_13sdp"/>

            <TextView
                android:id="@+id/textView_weight"
                android:background="@color/colorWhite"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40.5"
                android:textSize="@dimen/_13sdp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2"/>

        <!--<Button-->
            <!--android:id="@+id/fab_cat_update"-->
            <!--android:layout_marginTop="@dimen/_5sdp"-->
            <!--android:layout_marginRight="@dimen/_6sdp"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="@dimen/_25sdp"-->
            <!--android:text="수정"-->
            <!--android:textColor="@color/colorWhite"-->
            <!--android:background="@color/colorAccent"/>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_cat_update"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/icon_build"
        app:layout_anchorGravity="bottom|right|end" />

</FrameLayout>
