<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.jin.cat.fragments.MyCatDescFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorGray0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp">

            <ImageView
                android:id="@+id/imageView_cat"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:layout_marginRight="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_toEndOf="@+id/imageView_cat"
                android:text="이름" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@+id/imageView_cat"
                android:text="성별" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@+id/imageView_cat"
                android:text="생일" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@+id/imageView_cat"
                android:text="나이" />

            <TextView
                android:id="@+id/textView_catAge"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView6"
                android:layout_toEndOf="@+id/textView6"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView_cat"
                android:text="품종"
                android:layout_margin="@dimen/_3sdp"
                android:layout_below="@+id/textView_catHumanAge" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView_catAge"
                android:layout_toEndOf="@+id/textView_catAge"
                android:text="개월 / " />

            <TextView
                android:id="@+id/textView_catHumanAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_catAge"
                android:layout_alignStart="@+id/textView_catAge"
                />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView_catHumanAge"
                android:layout_toEndOf="@+id/textView_catHumanAge"
                android:text="(인간 기준)" />

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/textView_catName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/textView_catSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView4"
                android:layout_toEndOf="@+id/textView4" />

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/textView_catBirthDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView5"
                android:layout_toEndOf="@+id/textView5"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/textView_catType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView8"
                android:layout_toEndOf="@+id/textView5"/>


        </RelativeLayout>
</LinearLayout>
</FrameLayout>
