<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout5">

        <TextView
            fontPath="fonts/BMDOHYEON.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="보급형 / 마트용 저급사료"
            android:textSize="@dimen/_15sdp"
            tools:ignore="MissingPrefix" />

        <TextView
            fontPath="fonts/NanumBarunGothicLight.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:text="일반 마트에서 판매되는 사료이다.\n가격이 싸지만 영양소가 흡수되지 않고 배설물로 나온다.\n적정량의 영양을 섭취하기 위해 고품질 사료보다\n많은 양을 먹어야 하므로 쓸데 없는 열량을 섭취하게 된다."
            tools:ignore="MissingPrefix" />

    </LinearLayout>

</RelativeLayout>