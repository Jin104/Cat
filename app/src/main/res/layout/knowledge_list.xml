<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/knowledge_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="tab2"
            android:scaleType="centerCrop"
            android:src="@drawable/one" />

        <TextView
            android:id="@+id/knowledge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/knowledge_image"
            android:layout_below="@+id/knowledge_image"
            android:layout_marginTop="8dp"
            android:text="tab22"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/knowledge_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/knowledge_name"
            android:layout_below="@+id/knowledge_name"
            android:layout_marginTop="4dp"
            android:text="tab222"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>