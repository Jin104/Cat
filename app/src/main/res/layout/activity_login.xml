<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorDarker"
    tools:context="com.jin.cat.activities.LoginActivity">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/dictionary_cat2" />


        <com.google.android.gms.common.SignInButton
            android:layout_marginTop="@dimen/_50sdp"
            android:id="@+id/sign_in_btn"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_35sdp"
            android:text="구글로그인">
        </com.google.android.gms.common.SignInButton>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/guest_view"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/icon_user"
                    android:background="@color/colorPrimaryDark"/>
                <Button

                    tools:ignore="MissingPrefix"
                    fontPath="fonts/NanumBarunGothic.otf"
                    android:id="@+id/guest_btn"
                    android:layout_width="@dimen/_109sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimaryDark"
                    android:elevation="1dp"
                    android:text="게스트"/>

        </LinearLayout>
</LinearLayout>
