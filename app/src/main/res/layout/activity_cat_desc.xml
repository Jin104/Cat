<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jin.cat.Dictionary.CatDescActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp">

        <ImageView
            android:id="@+id/cat_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:scaleType="fitXY"
            android:background="#55ffffff"
            app:srcCompat="@drawable/cat" />

        <ImageButton
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#00ffffff"
            app:srcCompat="@drawable/add_back" />


        <ImageButton
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            app:srcCompat="@drawable/add_like"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMMENT"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/cat_comment"
            android:textColor="@color/colorWhite"
            android:background="@color/colorMainDarker2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cat_image"
            android:orientation="vertical"
            android:layout_above="@+id/cat_comment">

            <LinearLayout
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    tools:ignore="MissingPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아메리칸 숏헤어"
                    fontPath="fonts/NanumBarunGothicBold.otf"
                    android:textSize="@dimen/_17sdp"
                    android:id="@+id/cat_name"
                    />

                <TextView
                    tools:ignore="MissingPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="American Shorthair"
                    fontPath="fonts/NanumBarunGothic.otf"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/cat_name_eng"
                    />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        tools:ignore="MissingPrefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원산지"
                        fontPath="fonts/NanumBarunGothicBold.otf"
                        android:textSize="@dimen/_13sdp"
                        />

                    <TextView
                        android:layout_marginLeft="@dimen/_8sdp"
                        tools:ignore="MissingPrefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aaaaa"
                        fontPath="fonts/NanumBarunGothic.otf"
                        android:textSize="@dimen/_11sdp"
                        android:id="@+id/cat_country"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGray"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"/>

                    <TextView
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        fontPath="fonts/NanumBarunGothicBold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기원"
                        android:textSize="@dimen/_13sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:id="@+id/cat_origin"
                        fontPath="fonts/NanumBarunGothic.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1920년대 영국에서 북아메리카 대륙으로 배를 타고 건너온 청교도들이 배의 쥐를 잡는 용도로 태워 데려온 것으로 보인다. 이후 이 고양이를 미국 토착 고양이와 교배시키며 그 기준을 확립하였다."
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="MissingPrefix" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGray"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"/>

                    <TextView
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        fontPath="fonts/NanumBarunGothicBold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="생김새"
                        android:textSize="@dimen/_13sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/cat_looks"
                        fontPath="fonts/NanumBarunGothic.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="중대형종으로 몸이 짧고 근육이 잘 발달하였다. 암컷은 수컷보다 작다. 머리는 폭이 넓고 둥글다. 양 귀 사이는 넓으며 귀 끝부분이 약간 둥글다. 짧고 광택이 나는 털이 온몸에 빽빽하게 나 있으며, 털의 굵기가 계절에 따라 달라진다. 색은 매우 다양하나 가장 많은 것은 갈색이나 적갈색의 줄무늬가 있는 것이다."
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="MissingPrefix" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGray"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"/>
                    <TextView
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        fontPath="fonts/NanumBarunGothicBold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="성격"
                        android:textSize="@dimen/_13sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:id="@+id/cat_personality"
                        fontPath="fonts/NanumBarunGothic.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="겁이 없는 성격으로 두려움이 없기 때문에 뛰어다니고 노는 것을 무척 좋아한다. 온화하고 명랑한 편으로 모난 구석이 없으며 아이들과도 잘 지내고, 다른 동물들과도 잘 지내기 때문에 키우기 어렵지 않다."
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="MissingPrefix" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGray"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"/>

                    <TextView
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        fontPath="fonts/NanumBarunGothicBold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관리"
                        android:textSize="@dimen/_13sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:id="@+id/cat_manage"
                        fontPath="fonts/NanumBarunGothic.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="식욕이 왕성해 비만증에 걸리기 쉽다. 털 숱이 많이 때문에 일주일에 2-3회 빗질을 해준다."
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </RelativeLayout>




</LinearLayout>
