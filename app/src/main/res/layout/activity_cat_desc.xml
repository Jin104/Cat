        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearlayout"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cat_image"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    tools:ignore="MissingPrefix"
                    fontPath="fonts/NanumBarunGothicBold.otf"
                    android:id="@+id/cat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고양이 이름"
                    android:textSize="@dimen/_17sdp"/>

                <TextView
                    android:id="@+id/cat_name_eng"
                    fontPath="fonts/NanumBarunGothic.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고양이 영어 이름"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        fontPath="fonts/NanumBarunGothicBold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:text="원산지"
                        android:textSize="@dimen/_13sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/cat_country"
                        fontPath="fonts/NanumBarunGothic.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="abcd"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="MissingPrefix" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/colorGray" />

                    <TextView
                        fontPath="fonts/NanumBarunGothicBold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="기원"
                        android:textSize="@dimen/_13sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/cat_origin"
                        fontPath="fonts/NanumBarunGothic.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="abcd"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="MissingPrefix" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/colorGray" />

                    <TextView
                        fontPath="fonts/NanumBarunGothicBold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="생김새"
                        android:textSize="@dimen/_13sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/cat_looks"
                        fontPath="fonts/NanumBarunGothic.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="abcd"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="MissingPrefix" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/colorGray" />

                    <TextView
                        fontPath="fonts/NanumBarunGothicBold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="성격"
                        android:textSize="@dimen/_13sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/cat_personality"
                        fontPath="fonts/NanumBarunGothic.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="abcd"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="MissingPrefix" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/colorGray" />

                    <TextView
                        fontPath="fonts/NanumBarunGothicBold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="관리"
                        android:textSize="@dimen/_13sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/cat_manage"
                        fontPath="fonts/NanumBarunGothic.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="abcd"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
